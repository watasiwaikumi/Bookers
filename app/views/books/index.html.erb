<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
     <th><%= book.title %></th>
     <th><%= book.body %></th>
     <th><%= link_to "Show"%></th>
     <th><%= link_to "Edit"%></th>
     <th><%= link_to "Destroy"%></th>
    </tr>
    <% end %>


  </tbody>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>


  <h4>Body</h4>
  <%= f.text_area :body %>

<h4></h4>
  <%= f.submit 'Create Book' %>

<% end %>